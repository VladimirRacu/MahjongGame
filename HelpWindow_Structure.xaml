            </Button.Background>
        </Button>
        <Image HorizontalAlignment="Left" Height="175" Margin="44,125,0,0" VerticalAlignment="Top" Width="207" Source="/MahjongGame;component/MahjongImages/squareStructureSample.png" Stretch="UniformToFill" MouseDown="Image_MouseDown"/>
