        <Image HorizontalAlignment="Left" Height="175" Margin="44,399,0,0" VerticalAlignment="Top" Width="207" Source="MahjongImages/bridgeStructureSample.png" Stretch="Fill" MouseDown="Image_MouseDown_2"/>
        <Label Content="Bridge" HorizontalAlignment="Left" Margin="101,342,0,0" VerticalAlignment="Top" Height="54" Width="94" FontSize="34" FontFamily="Monotype Corsiva"/>
        <Image HorizontalAlignment="Left" Height="175" Margin="294,399,0,0" VerticalAlignment="Top" Width="207" Source="MahjongImages/venetianBridgesStructureSample.png" Stretch="Fill" MouseDown="Image_MouseDown_3"/>
        <Label Content="Venetian bridges" HorizontalAlignment="Left" Margin="283,342,0,0" VerticalAlignment="Top" Height="54" Width="227" FontSize="34" FontFamily="Monotype Corsiva"/>
    </Grid>
</Window> 
