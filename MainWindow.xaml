                    <MenuItem Header="ImagePath"/>
                    <Separator/>
                    <MenuItem Header="State" />
                    <MenuItem Header="Layer" />
                </ContextMenu>
            </ContextMenuService.ContextMenu>
        </Grid>
    </Grid>
</Window>
